#!/usr/env/bin ruby

require 'spectator/emacs'
require 'docopt'
CONFIGFILE = '.spectator-emacs'
THISFILE = File.basename __FILE__
doc = <<DOCOPT
Listen to file changes and run RSpec, sending notifications to Emacs via Enotify.

Usage:
  #{THISFILE}
  #{THISFILE} [--config <filename>]
  #{THISFILE} (-h | --help)
  #{THISFILE} --version

Options:
  -h --help             Show this screen.
  --config <filename>   Configuration file to read [default: .spectator-emacs]
  --version             Show version.

DOCOPT

begin
  require 'pp'

  args = Docopt::docopt(doc, :help => false, :version => Spectator::Emacs::VERSION)
  puts "foobar"
  config_file = args['--config'] rescue nil
  pp args
  if config_file and File.exists? config_file
    content = File.read(config_file)
    eval(content)  if not content.nil?
  end

  @runner ||= Spectator::ERunner.new
rescue Docopt::Exit => e
  puts e
  puts e.message
end


# Local Variables:
# mode: ruby
# End:
